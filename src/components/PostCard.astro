---
// Used in blog index and homepage "recent posts" section
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
  readingTime?: number;
}

const { title, description, pubDate, slug, tags = [], readingTime } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="post-card">
  <div class="card-meta">
    <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    {readingTime && (
      <>
        <span class="dot">Â·</span>
        <span>{readingTime} min read</span>
      </>
    )}
  </div>

  <h2 class="card-title">
    <a href={`/blog/${slug}`}>{title}</a>
  </h2>

  <p class="card-desc">{description}</p>

  {tags.length > 0 && (
    <div class="card-tags">
      {tags.map(tag => (
        <a
          class="tag"
          href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
        >
          {tag}
        </a>
      ))}
    </div>
  )}
</article>

<style>
  .post-card {
    padding: 28px 0;
    border-bottom: 1px solid var(--border);
  }

  .post-card:first-child { padding-top: 0; }
  .post-card:last-child  { border-bottom: none; }

  .card-meta {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 500;
    color: var(--muted);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 10px;
  }

  .dot { color: var(--border); }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: -0.015em;
    line-height: 1.3;
    margin-bottom: 8px;
  }

  .card-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.15s;
  }
  .card-title a:hover { color: var(--accent); }

  .card-desc {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    color: var(--muted);
    line-height: 1.6;
    margin-bottom: 14px;
    font-weight: 300;
  }

  .card-tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tag {
    font-family: var(--font-sans);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    background: var(--accent-dim);
    color: var(--accent);
    padding: 2px 9px;
    border-radius: 3px;
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
  }
  .tag:hover {
    background: var(--accent);
    color: white;
  }
</style>
